/* pages/home.wxss */
.wrap {
  height: 150px;
  background: #ccc;
}
.nav-wrap {
  display: flex;
  justify-content: space-between;
}
.nav-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.iconfont {
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  background-color: rgb(240, 19, 19);
  border-radius: 50%;
  text-align: center;
  color: #fff;
  font-size: 50rpx;
  margin: 20rpx 0;
}
.nav-item text:last-child {
  font-size: 28rpx;
}